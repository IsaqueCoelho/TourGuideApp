<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ImageItem">
        <item name="android:layout_height">77dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="TitleItem">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/title_text</item>
    </style>

    <style name="TitleItem.topic">
        <item name="android:textSize">@dimen/body_text</item>
    </style>

    <style name="LineItem">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">@dimen/soft_margin</item>
    </style>

</resources>
